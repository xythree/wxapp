
.iwrap {
    padding: 10rpx;
}

.ititle {
    font-size: 24rpx;
    font-weight: bold;
    color: #000;
    padding: 10rpx 0;    
}

.itime {
    padding: 10rpx 0;
    color: #838383;
    font-size: 12rpx;
    border-bottom: 1px solid #e5e5e5;
}

.icontent {
    padding: 20rpx;
    margin-bottom: 30rpx;
    font-size: 18rpx;
    color: #333;
    word-wrap: break-word; 
    word-break: normal;
}

.col_fade {
    height: 80rpx;
    line-height: 80rpx;
    background: #eee;
    color: #444;
    font-size: 14rpx;
    text-indent: 1em;
}

.user_info {
    margin-top: 10rpx;
    border-bottom: 1px solid #f0f0f0;
}

.user_info_box image {
    width: 80rpx;
    height: 80rpx;
}
.user_info_box .user_time,
.user_info_box .user_name {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 20rpx;
    font-size: 14rpx;    
    vertical-align: top;
}
.user_info_box .user_name {
    color: #333;    
    font-weight: bold;
}
.user_info_box .user_time {
    font-size: 12rpx;
    color: #08c;
}
.user_info .user_info_text {
    display: block;
    font-size: 14rpx;
    color: #333;
    padding: 10rpx;
}