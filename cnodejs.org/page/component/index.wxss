page {
    overflow: hidden;
}
.itab_box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    height: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
    font-size: 14rpx;
    background: #eee;    
    z-index: 9;
}
.itab_box view {
    flex: 1;
    text-align: center;
    color: #80BD01;
}
.itab_box .tabInd {
    display: block;
    color: #fff;
    width: 60%;
    margin: 0 auto;
    background: #80BD01;
}

.iwrap {
    margin-top: 60rpx;
    height: 100%;
}
.ilists {
    margin: 5rpx;
    display: flex;
    height: 80rpx;
    margin-bottom: 10rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #eee;
}

.iavatar {    
    width: 80rpx;
    height: 100%;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.icount {
    width: 100rpx;
    height: 100%;
    line-height: 80rpx;
    font-size: 10rpx;
    text-align: center;
}
.icount .ireply_count {
    color: #9970DE;
}
.icount .ivisit_count {
    color: #999;
}

.ititle {
    flex: 1;   
    width: 50%; 
}
.ititle .ititle_text {
    display: block;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;   
    font-size: 14rpx;
}
.ititle .ititle_text text {
    display: block;
    width: 100%;
    white-space: nowrap;    
    overflow: hidden;
    text-overflow: ellipsis;
}
